<!DOCTYPE html>
<html>
  <head>
    <title>ClassicSpaces</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
   <script src="https://kit.fontawesome.com/26164d5121.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  

    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm" style="background-color: #1f1f1d;">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="<%= root_path %>">ClassicSpaces</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              
        <% if user_signed_in? %>
        <li class="nav-item">
            <%= link_to new_space_path, class: 'nav-link text-light' do %>
             新規投稿
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
            Myページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to spaces_path, class: 'nav-link text-light' do %>
            投稿一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
             ログアウト
            <% end %>
          </li>
          
            <% else %>
             <li class="nav-item">
            <%= link_to users_guest_sign_in_path, method: :post,class: 'nav-link text-light' do %>
            ゲストログイン
            <% end %>
            </li>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              新規登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              ログイン
              <% end %>
          </li>
          </div>
        </div>
      </nav>
    <% end %>
  </header>
    <div class="d-flex justify-content-center mb-2">
    <% if user_signed_in? %>
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content %>
        <%= f.select :model, options_for_select({ "ユーザー" => "user", "会場名" => "spaces" }) %>
        <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
        <%= f.submit '検索' %>
        <% end %>
        <% end %>
    </div>
    <main class="mb-auto">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
        <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
        <% end %>
    <%= yield %>
    </main>
  </body>

  <% if user_signed_in? %>
  <div class="container">
    <%= button_to "1つ前の画面に戻る", "#", onclick: "history.back(); return false;", class: "btn btn-secondary mb-3" %>
  </div>
  <% end %>
  
  <footer style="background-color: #ebebeb;">
    <div class="container mt-5">
	    <div class="row">
  	    <div class="mx-auto">
  		    <p>Kota Ikezaki</p>
  		    <p>問い合わせ先：ikezakiXXXX@XXXXXXXX.com</p>
	      </div>
      </div>
    </div>
</footer>
</html>
