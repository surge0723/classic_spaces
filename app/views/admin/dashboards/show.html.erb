<div class="container my-4">
  <h2 class="mb-4 border-bottom pb-2"><%= @user.name %> さんの投稿一覧</h2>
  
  <table class="table table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th>会場名</th>
        <th>場所</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% if @spaces_list.present? %>
        <% @spaces_list.each do |space| %>
          <tr>
            <td><%= space.space %></td>
            <td><%= space.place %></td>
            <td>
              <%= link_to '削除', space_path(space), 
              method: :delete, 
              class: 'btn btn-danger btn-sm', 
              data: { confirm: '本当に削除しますか？' } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2" class="text-center text-muted">投稿した練習場はありません。</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2 class="mt-5 mb-4 border-bottom pb-2"><%= @user.name %> さんのコメント一覧</h2>
  
  <table class="table table-hover table-striped">
    <thead class="thead-dark">
      <tr>
        <th>会場名</th>
        <th>区分</th>
        <th>コメント内容</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% if @spaces_comment.present? %>
        <% @spaces_comment.each do |comment| %>
          <tr>
            <td><%= comment.space.space %></td>
            <td><%= comment.category %></td>
            <td><%= comment.comment %></td>
            <td>
              <%= link_to '削除', admin_comment_path(comment), 
                          method: :delete, 
                          class: 'btn btn-danger btn-sm', 
                          data: { confirm: '本当に削除しますか？' } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4" class="text-center text-muted">投稿したコメントはありません。</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="mt-4">
    <%= link_to '会員一覧に戻る', admin_dashboards_path, class: 'btn btn-secondary' %>
  </div>
</div>
