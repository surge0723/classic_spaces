<div class="container">
    <h2><%= @user.name %> さんの投稿一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会場名</th>
          <th>場所</th>
        </tr>
      </thead>
      <tbody>
        <% if @spaces_list.present? %>
        <% @spaces_list.each do |space| %>
          <tr>
            <td><%= space.space %></td>
            <td><%= space.place %></td>
          </tr>
        <% end %>
         <% else %>
            <tr>
              <td colspan="2">投稿した練習場はありません。</td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to '会員一覧に戻る', admin_dashboards_path %>
    
</div>