<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">管理者画面 - 新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-4 border rounded bg-light" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例: admin@example.com", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">※ 最低 <%= @minimum_password_length %> 文字</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワードを入力", class: "form-control" %>
        </div>
      
        <div class="text-center">
          <%= f.submit "登録する", class: "btn btn-primary btn-block mt-3" %>
        </div>
      <% end %>
      
      <div class="text-center mt-3">
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>
