<div class="container">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Myページ',user_path(current_user) %></a></li>
    <li class="breadcrumb-item active" aria-current="page">ユーザー情報編集</a></li>
  </ol>
</nav>
 <div class="row">
<%= render "public/spaces/left" %>
<div class="col-lg-9"> 
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <%= form_for @user do |f| %> 
       <div class="form-group">
         <label for="inputName">ユーザー名</label>
         <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></div>
       </div>
        <div class="form-group">
         <label for="inputEmail">登録メールアドレス</label>
         <div><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"email"%></div>
         </div>   
         
         <%= f.submit "ユーザー情報を変更する",class: "btn btn-secondary"  %>
         <% end %>
    </div>
  </div>
</div>
</div>