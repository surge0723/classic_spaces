<table class='table custom-font-color'>
  <thead>
    <tr>
      <th>グループ名</th>
      <th>参加条件</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.condition %></td>
        <td><%= link_to 'Show', group, class: "group_#{group.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>