<div class="container">
  <!-- パンくずリスト -->
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/spaces">投稿一覧</a></li>
      <li class="breadcrumb-item">投稿詳細</li>
    </ol>
  </nav>
  
  <div class="row">
    <!-- 左側のサイドコンテンツ -->
    <%= render "public/spaces/left" %>

    <!-- メインコンテンツ -->
    <div class="col-lg-9">
      <h2>Groups</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.name %></td>
              <td><%= link_to 'Show', group, class: "group_#{group.id}" %></td>
              <% if group.is_owned_by?(current_user) %>
                <td><%= link_to 'グループの編集', edit_group_path(group), class: "group_#{group.id}" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>