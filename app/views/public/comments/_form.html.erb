<h2>コメント投稿</h2>

<%= form_with(model: [space, comment], local: true, class: "mt-4") do |f| %>
  <div class="form-group">
    <%= f.label :category, "投稿区分", class: "form-label" %>
    <%= f.select :category, [["評価", "評価"], ["追加情報", "追加情報"], ["改善点", "改善点"], ["その他", "その他"]], { include_blank: "選択して下さい" }, { class: "form-select", required: true } %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :comment, "コメント", class: "form-label" %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control", required: true %>
  </div>

  <div class="mt-3">
    <%= f.submit "送信", class: "btn btn-primary" %>
  </div>
<% end %>
