<div class="container">
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item">投稿一覧</a></li>
  </ol>
</nav>
 <div class="row">
<%= render "public/spaces/left" %>


<div class="col-lg-9"> 
  <table class="table table-hover custom-font-color">
    <h2>投稿一覧</h2>
    <thead>
      <tr>
        <th>会場名</th>
        <th>場所</th>
        <th>詳細</th>
        <th>保存</th>
        <th>コメント数</th>
      </tr>
    </thead>
    <% @spaces.each do |space| %>
    <tbody>
      <tr>
          <td><%= space.space %></td>
          <td><%= space.place %></td>
          <td><%= link_to '詳細',space_path(space.id) %></td>
          <td><%= render "public/favorites/btn", space: space %></td>
          <td><%= space.comments.count %></td>
      </tr>
      <% end %>
      </div>
      </div>
    </tbody>
  </table>
  <%= paginate @spaces %>
</div>
