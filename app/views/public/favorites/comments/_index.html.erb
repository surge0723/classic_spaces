<table>
  <tbody>
      <% space.comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(comment.user) do %>
            <%= comment.user.name %>
          <% end %>
        </td>
        <td><%= comment.comment %></td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to "Destroy", space_comment_path(space, comment), method: :delete %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>